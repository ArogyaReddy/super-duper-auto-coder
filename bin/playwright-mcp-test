#!/bin/bash

# ü•í Cucumber MCP Test Executor - Wrapper Script  
# Executes Cucumber tests (with Playwright) with MCP integration and auto-fixing

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
AUTO_CODER_DIR="$(dirname "$SCRIPT_DIR")"

# Set environment variables
export NODE_ENV="development"
export SBS_PATH="/Users/gadea/auto/auto/qa_automation/SBS_Automation"
export AUTO_CODER_PATH="/Users/gadea/auto/auto/qa_automation/auto-coder/SBS_Automation"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ü•í Cucumber MCP Test Executor (Playwright Integration)${NC}"
echo -e "${YELLOW}========================================================${NC}"

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo -e "${RED}‚ùå Node.js not found. Please install Node.js first.${NC}"
    exit 1
fi

# Execute the Playwright MCP test executor
cd "$AUTO_CODER_DIR"
node utils/playwright-mcp-test-executor.js "$@"

exit_code=$?

if [ $exit_code -eq 0 ]; then
    echo -e "${GREEN}‚úÖ Cucumber MCP execution completed successfully${NC}"
else
    echo -e "${RED}‚ùå Cucumber MCP execution failed with exit code $exit_code${NC}"
fi

exit $exit_code
