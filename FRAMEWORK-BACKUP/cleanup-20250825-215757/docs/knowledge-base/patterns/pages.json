{
  "metadata": {
    "version": "2.0.0",
    "lastUpdated": "2025-08-05",
    "source": "SBS_Automation Framework Page Patterns",
    "purpose": "Page object patterns for auto-coder framework"
  },
  "pageObjectPatterns": {
    "baseStructure": {
      "imports": [
        "const By = require('../../support/By.js');",
        "const BasePage = require('../common/base-page');"
      ],
      "classDeclaration": "class {PAGE_NAME}Page extends BasePage {",
      "constructor": "constructor(page) {\n    super(page);\n    this.page = page;\n  }"
    },
    "locatorPatterns": {
      "button": "const {LOCATOR_NAME} = By.xpath('//button[contains(text(), \"{TEXT}\")] | //sdf-button[contains(text(), \"{TEXT}\")] | //*[@data-test-id=\"{ID}\"]');",
      "link": "const {LOCATOR_NAME} = By.xpath('//a[contains(text(), \"{TEXT}\")] | //sdf-link[contains(text(), \"{TEXT}\")] | //*[@data-test-id=\"{ID}\"]');",
      "title": "const {LOCATOR_NAME} = By.xpath('//h1[contains(text(), \"{TEXT}\")] | //*[@data-test-id=\"page-title\"][contains(text(), \"{TEXT}\")] | //*[contains(@class, \"page-header\")][contains(text(), \"{TEXT}\")]');",
      "input": "const {LOCATOR_NAME} = By.xpath('//input[@placeholder=\"{PLACEHOLDER}\"] | //input[@name=\"{NAME}\"] | //*[@data-test-id=\"{ID}\"]');"
    },
    "methodPatterns": {
      "navigation": "async navigateTo{PAGE_NAME}Page() {\n    await new LeftNav(this.page).navigateTo{PAGE_NAME}();\n  }",
      "click": "async click{ELEMENT_NAME}() {\n    await this.clickElement({LOCATOR_NAME});\n  }",
      "verify": "async verify{ELEMENT_NAME}Displayed() {\n    return await this.isVisible({LOCATOR_NAME});\n  }",
      "parameterized": "async {METHOD_NAME}({PARAMS}) {\n    // Implementation based on parameters\n  }"
    }
  },
  "commonPageElements": {
    "navigation": {
      "leftNav": "LeftNav",
      "topNav": "TopNav",
      "breadcrumb": "Breadcrumb"
    },
    "forms": {
      "saveButton": "Save",
      "cancelButton": "Cancel",
      "submitButton": "Submit",
      "resetButton": "Reset"
    },
    "feedback": {
      "successMessage": "Success",
      "errorMessage": "Error",
      "warningMessage": "Warning",
      "infoMessage": "Info"
    }
  },
  "sbsIntegration": {
    "requiredImports": [
      "const LeftNav = require('../../../SBS_Automation/pages/common/run-left-nav-page');"
    ],
    "navigationMethods": {
      "billing": "await new LeftNav(this.page).navigateToBillingAndInvoices();",
      "payroll": "await new LeftNav(this.page).navigateToPayroll();",
      "reports": "await new LeftNav(this.page).navigateToReports();"
    },
    "basePageMethods": [
      "isVisible(locator)",
      "isEnabled(locator)",
      "clickElement(locator)",
      "scrollToElement(locator)",
      "navigateToPage(url)"
    ]
  },
  "parameterizationRules": {
    "dynamicLocators": "Use parameterized functions for elements referenced in feature files",
    "methodParameters": "Accept parameters for flexible element interaction",
    "locatorVariations": "Provide multiple xpath options for robustness"
  }
}
