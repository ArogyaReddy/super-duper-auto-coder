  "testConfiguration": {
    "defaultEnvironment": "fit",
    "defaultBrowser": "chrome",
    "defaultTimeout": 180000,
    "retryCount": 2,
    "parallelWorkers": 1,
    "scenarios": {
      "local_development": {
        "featureFlags": {
          "LOCAL_DEVELOPMENT": true,
          "BYPASS_AUTH_FOR_LOCAL": true,
          "SKIP_LOGIN": true,
          "HEADLESS_MODE": false,
          "DEBUG_MODE": true,
          "VERBOSE_LOGGING": true
        }
      },
      "api_testing": {
        "featureFlags": {
          "API_ONLY_MODE": true,
          "SKIP_UI_LOGIN_FOR_API": true,
          "HEADLESS_MODE": true,
          "ENABLE_SCREENSHOTS": false
        }
      },
      "ui_testing": {
        "featureFlags": {
          "UI_ONLY_MODE": true,
          "API_ONLY_MODE": false,
          "ENABLE_SCREENSHOTS": true
        }
      },
      "ci_pipeline": {
        "featureFlags": {
          "HEADLESS_MODE": true,
          "ENABLE_SCREENSHOTS": true,
          "ENABLE_VIDEO_RECORDING": false,
          "VERBOSE_LOGGING": false
        }
      },
      "regression_testing": {
        "featureFlags": {
          "USE_GOLDEN_DATA": true,
          "ENABLE_SCREENSHOTS": true,
          "ENABLE_VIDEO_RECORDING": true,
          "VERBOSE_LOGGING": true
        }
      }
    }
  },
  "selectors": {
    "login": {
      "username": [
        "#login-form_username",
        "#username",
        "input[name='username']",
        "input[name='email']",
        "input[type='email']",
        "[data-testid='username']",
        ".username-input"
      ],
      "password": [
        "#login-form_password",
        "#password",
        "input[name='password']",
        "input[type='password']",
        "[data-testid='password']",
        ".password-input"
      ],
      "verifyButton": "#verifUseridBtn, #btnNext, button[type='submit'], .next-btn",
      "signInButton": "#signBtn, #btnNext, button[type='submit'], .signin-btn, .login-btn",
      "remindLaterButton": "//*[text() = 'Remind me later']",
      "stepUpDialog": "[data-testid='stepup-dialog'], .stepup-modal",
      "textNotification": "[data-testid='text-notification'], button:has-text('Text')",
      "emailNotification": "[data-testid='email-notification'], button:has-text('Email')"
    },
    "postLogin": {
      "successIndicators": [
        "[data-testid='home-dashboard']",
        "[data-testid='user-menu']",
        ".home-page",
        ".dashboard",
        "h1:has-text('Dashboard')",
        "h1:has-text('Home')",
        "[aria-label='User menu']",
        ".payroll-carousel",
        ".max-dashboard"
      ]
    }
  }
